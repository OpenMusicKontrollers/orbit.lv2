# Looper Plugin
orbit:looper
	a lv2:Plugin ,
		lv2:ConverterPlugin ;
	doap:name "Orbit Looper" ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:orbit ;
	lv2:requiredFeature urid:map ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable ;

	lv2:port [
		# sink event port
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		atom:supports time:Position ;
		atom:supports atom:Object ;
		atom:supports osc:Event ;
		lv2:index 0 ;
		lv2:symbol "event_in" ;
		lv2:name "Event Input" ;
		lv2:designation lv2:control ;
	] , [
		# source event port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		atom:supports atom:Object ;
		atom:supports osc:Event ;
		lv2:index 1 ;
		lv2:symbol "event_out" ;
		lv2:name "Event Output" ;
		lv2:designation lv2:control ;
	] , [
		# control input ports
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "punch_mode" ;
		lv2:name "Punch Mode" ;
		lv2:default 1.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
		lv2:portProperty lv2:integer;
		lv2:portProperty lv2:enumeration;
		lv2:scalePoint [ rdfs:label "Beat" ;					rdf:value 0 ] ;
		lv2:scalePoint [ rdfs:label "Bar" ;						rdf:value 1 ] ;
	] , [
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "width" ;
		lv2:name "Width" ;
		lv2:default 4.0 ;
		lv2:minimum 1.0 ;
		lv2:maximum 128 ;
		lv2:portProperty lv2:integer;
	] , [
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 4 ;
		lv2:symbol "mute" ;
		lv2:name "Mute" ;
		lv2:default 0 ;
		lv2:minimum 0 ;
		lv2:maximum 1 ;
		lv2:portProperty lv2:toggled;
	] , [
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 5 ;
		lv2:symbol "switch" ;
		lv2:name "Switch" ;
		lv2:default 1 ;
		lv2:minimum 0 ;
		lv2:maximum 1 ;
		lv2:portProperty lv2:toggled;
	] , [
		# control output ports
	  a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 6 ;
		lv2:symbol "play_capacity" ;
		lv2:name "Playback Capacity" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 100.0 ;
		units:unit units:pc ;
	] , [
	  a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 7 ;
		lv2:symbol "rec_capacity" ;
		lv2:name "Recording Capacity" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 100.0 ;
		units:unit units:pc ;
	] , [
	  a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 8 ;
		lv2:symbol "play_position" ;
		lv2:name "Playback Position" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 100.0 ;
		units:unit units:pc ;
	] .

