orbit:quantum_mode
	a lv2:Parameter ;
	rdfs:label "Mode" ;
	rdfs:comment "set mode of quantization" ;
	rdfs:range atom:Int ;
	lv2:minimum 0 ;
	lv2:maximum 2 ;
	lv2:scalePoint [
		rdfs:label "Floor" ;
		rdf:value 0 ;
	] , [
		rdfs:label "Round" ;
		rdf:value 1 ;
	] , [
		rdfs:label "Ceiling" ;
		rdf:value 2 ;
	] .

